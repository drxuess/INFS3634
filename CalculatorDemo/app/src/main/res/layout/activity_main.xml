<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="xu.morgan.calculator.MainActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="0"
        android:textSize="@dimen/display_font_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:weightSum="4">

        <TableLayout
            android:id="@+id/tl_numpad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:weightSum="4">
            <TableRow
                android:layout_weight="1"
                android:weightSum="3">
                <Button
                    android:id="@+id/btn_7"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="7"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size"
                    android:onClick="buttonOnClick"/>
                <Button
                    android:id="@+id/btn_8"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="8"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size"
                    android:onClick="buttonOnClick"/>
                <Button
                    android:id="@+id/btn_9"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="9"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size"
                    android:onClick="buttonOnClick"/>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:weightSum="3">
                <Button
                    android:id="@+id/btn_4"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="4"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size"
                    android:onClick="buttonOnClick"/>
                <Button
                    android:id="@+id/btn_5"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="5"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size"
                    android:onClick="buttonOnClick"/>
                <Button
                    android:id="@+id/btn_6"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="6"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size"
                    android:onClick="buttonOnClick"/>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:weightSum="3">
                <Button
                    android:id="@+id/btn_1"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="1"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size"
                    android:onClick="buttonOnClick"/>
                <Button
                    android:id="@+id/btn_2"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="2"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size"
                    android:onClick="buttonOnClick"/>
                <Button
                    android:id="@+id/btn_3"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="3"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size"
                    android:onClick="buttonOnClick"/>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:weightSum="3">
                <Button
                    android:id="@+id/btn_decimal"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="."
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size"
                    android:onClick="buttonOnClick"/>
                <Button
                    android:id="@+id/btn_0"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="0"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size"
                    android:onClick="buttonOnClick"/>
                <Button
                    android:id="@+id/btn_equal"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="="
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size"
                    android:onClick="equalsOnClick"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:id="@+id/operations_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:weightSum="5">
            <Button
                android:id="@+id/btn_clear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="C"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:onClick="clearOnClick"/>
            <Button
                android:id="@+id/btn_divide"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="÷"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:onClick="operatorOnClick"/>
            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="×"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:onClick="operatorOnClick"/>
            <Button
                android:id="@+id/btn_minus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="−"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:onClick="operatorOnClick"/>
            <Button
                android:id="@+id/btn_plus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:onClick="operatorOnClick"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
